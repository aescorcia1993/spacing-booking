# Azure Production Environment Configuration
APP_NAME="SpaceBooking API"
APP_ENV=production
APP_KEY=base64:CHANGE_THIS_IN_AZURE_PORTAL
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://be-spacing-booking-hdqzhqdbhhareqfw.canadacentral-01.azurewebsites.net

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (Azure Database for PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=CHANGE_TO_YOUR_AZURE_DB_HOST.postgres.database.azure.com
DB_PORT=5432
DB_DATABASE=spacebooking
DB_USERNAME=CHANGE_THIS
DB_PASSWORD=CHANGE_THIS

# Session & Cache Configuration (Azure Redis Cache)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
CACHE_PREFIX=

# Redis Configuration (Azure Redis Cache)
REDIS_CLIENT=phpredis
REDIS_HOST=CHANGE_TO_YOUR_AZURE_REDIS_HOST.redis.cache.windows.net
REDIS_PASSWORD=CHANGE_THIS
REDIS_PORT=6380
REDIS_DB=0
REDIS_CACHE_DB=1

# CORS Configuration
SANCTUM_STATEFUL_DOMAINS=
FRONTEND_URL=https://CHANGE_TO_YOUR_FRONTEND_URL.azurestaticapps.net

# Swagger Configuration (Force HTTPS)
L5_SWAGGER_GENERATE_ALWAYS=false
L5_SWAGGER_USE_ABSOLUTE_PATH=true
L5_SWAGGER_FORCE_HTTPS=true
L5_SWAGGER_CONST_HOST=https://be-spacing-booking-hdqzhqdbhhareqfw.canadacentral-01.azurewebsites.net/api

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Azure-specific
WEBSITES_PORT=8000
WEBSITES_ENABLE_APP_SERVICE_STORAGE=true
